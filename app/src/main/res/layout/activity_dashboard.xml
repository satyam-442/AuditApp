<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@drawable/mainscreen"
    android:orientation="vertical"
    android:weightSum="10">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/white_logo"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:text="Audit"
        android:layout_marginTop="12sp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_profile"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/profiles"
        android:layout_marginTop="5dp"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:text="Total Balance"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginLeft="110dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:textColor="#ffffff"
            android:textSize="25sp"
           android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/totalBankBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="102523"
            android:textColorHint="#fff"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-35dp"
            android:textColor="#ffffff"
            android:textSize="25sp"/>


        <ImageView
            android:id="@+id/sub"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sub"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
           />

        <ImageView
            android:id="@+id/add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/add_button"
            android:layout_marginLeft="280dp"
            android:paddingBottom="5dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finances"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#F3B342"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>



    <ScrollView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="6">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:columnCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



         <TextView
             android:id="@+id/textView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Bank Account"
             android:layout_marginLeft="130dp"
             android:layout_marginBottom="45dp"
             android:textStyle="bold"
             android:textSize="20dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Rs."
             android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
             android:textSize="20dp"/>

            <TextView
                android:id="@+id/bankref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="45dp"
                android:text="52033"
                android:textSize="15dp"
                android:textStyle="bold" />


     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="90dp"
         android:layout_height="90dp"
         app:srcCompat="@drawable/bank"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="5dp"
         />

        </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="-410dp">



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savings"
                    android:textStyle="bold"
                    android:layout_marginLeft="200dp"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="195dp"
                    android:text="Rs."
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/savingsref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52033"
                   android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="235dp"
                    android:textSize="15dp"
                    />


                <ImageView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="50dp"
                    app:srcCompat="@drawable/savings"

                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="-822dp">



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Pay"
                    android:textStyle="bold"
                    android:layout_marginLeft="240dp"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="250dp"
                    android:text="Rs."
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/googleref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52033"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="285dp"
                    android:textSize="15dp"
                    />


                <ImageView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="110dp"
                    app:srcCompat="@drawable/goooglpay"

                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-0dp">



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paytm"
                    android:textStyle="bold"
                    android:layout_marginLeft="140dp"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="155dp"
                    android:text="Rs."
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/paytmref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52033"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="190dp"
                    android:textSize="15dp"
                    />


                <ImageView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="7dp"
                    app:srcCompat="@drawable/paytm"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="-415dp">



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PhonePe"
                    android:textStyle="bold"
                    android:layout_marginLeft="200dp"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="220dp"
                    android:text="Rs."
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/phoneperef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52033"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="255dp"
                    android:textSize="15dp"
                    />


                <ImageView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="65dp"
                    app:srcCompat="@drawable/phonepay"

                    />

            </androidx.cardview.widget.CardView>
        </GridLayout>
 </ScrollView>







</LinearLayout>