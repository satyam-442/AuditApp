<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateExpenseActivity">

    <LinearLayout
        android:id="@+id/bankBalanceLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Balance: "
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bankBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs."
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expenseBalanceLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankBalanceLay"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Expense: "
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/expenseBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs."
            android:textSize="19sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/calculateExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expenseBalanceLay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="154dp"
        android:gravity="center"
        android:text="Calculate!" />

    <LinearLayout
        android:id="@+id/leftBalanceLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateExp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your net saving: "
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/leftBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs."
            android:textSize="19sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>